    "version": "0.2.0",
    "configurations": [
        {
            "name": "Start via NPM",
            "request": "launch",
            "cwd": "${workspaceFolder}/auth",
            "env": {
                "DEBUG": "auth:*"
            },
            "runtimeArgs": [
                "run-script",
                "start"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node",
            "outputCapture": "std"
        }
    ]
}